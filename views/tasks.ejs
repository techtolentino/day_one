<html>
    <head>
        <title>Tribe Starter Kit</title>
        <link rel="stylesheet" href="./styles/main.css">
        <script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
        <script src="./scripts/tasks.js"></script>
    </head>
    <body>
        <h1>Day One Starter Kit</h1>
        <div id="tasks">
            <form action="">
                <input type="text" name="item" placeholder="add new item ...">
                <button type="submit">Add item</button>
            </form>
            <ul class="tasks-list">
                <% for (var i=0; i < tasks.length; i++){ %>
                    <%if (tasks[i].done === true) {%>
                        <li class="task-done" data-id='<%= tasks[i]._id %>' style="text-decoration: line-through"><%= tasks[i].item %></li>
                         <% } else{ %>
                        <li data-id='<%= tasks[i]._id %>'><%= tasks[i].item %></li>
                    <% } %>
                    <button class="update">update</button>
                    <button class="delete">delete</button>
                <% } %>
            </ul>
        </div>
    </body>
</html>
